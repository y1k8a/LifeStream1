  <line_editor bevel_style="in" border_style="line" border_thickness="1" bottom_delta="0"
	     follows="left|top|right" font="SansSerifSmall" handle_edit_keys_directly="true"
	     height="20" left_delta="100" max_length="255" mouse_opaque="true"
	     name="search" select_all_on_focus_received="true" width="250" />

  <view_border bevel_style="none" border_thickness="1" bottom_delta="-10" 
