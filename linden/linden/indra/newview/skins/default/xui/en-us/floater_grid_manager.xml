<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater can_close="true" can_drag_on_left="false" can_minimize="false"
     can_resize="true" height="420" min_height="420" min_width="600"
     name="floater_login" title="Grid Manager" width="600">

  <!-- GRID LIST -->
  
  <text type="string" length="1" enabled="true" name="grid_selector_label"
		  height="16" width="100" left="10" top="-18"
		  h_pad="0" v_pad="0" halign="left"
		  font="SansSerif"
		  follows="left|top" bg_visible="false" border_visible="false" mouse_opaque="true"
	    drop_shadow_visible="true" border_drop_shadow_visible="false">
    Select a Grid:
  </text>
  
  <scroll_list background_visible="true" bottom_delta="65" draw_border="true"
	     draw_stripes="false" sort_column="1"
	     follows="top|left|bottom" height="320" left="10" multi_select="false"
	     name="grid_selector" width="200">
    <column label="Grid List" name="grid_nick" width="0" />
    <column label="Grid List" name="grid_name" width="200" />
  </scroll_list>
  
  <!-- GRID BUTTONS -->
  
  <button label="Add New Grid" enabled="true" name="btn_add"
		  height="18" width="150" left="35" bottom_delta="-22"
		  halign="center"
		  follows="left|bottom" scale_image="true"
	    font="SansSerifSmall" mouse_opaque="true" />
  <button label="Duplicate Grid" enabled="true" name="btn_copy"
		  height="18" width="150" left_delta="0" bottom_delta="-20"
		  halign="center"
		  follows="left|bottom" scale_image="true"
	    font="SansSerifSmall" mouse_opaque="true" />
  <button label="Delete Grid" enabled="true" name="btn_delete"
		  height="18" width="150" left_delta="0" bottom_delta="-20"
		  halign="center"
		  follows="left|bottom" scale_image="true"
	    font="SansSerifSmall" mouse_opaque="true" />

  <!-- GRID NAME AND NICK -->
  
  <text bg_visible="false" border_drop_shadow_visible="false" border_visible="false"
       bottom="365" drop_shadow_visible="true" follows="left|top"
       font="SansSerif" h_pad="0" halign="left" height="16"
       left="220" mouse_opaque="true" name="gridnick_text" v_pad="0" width="120">
    Grid nick (unique):
  </text>
  <line_editor bevel_style="in" border_style="line" border_thickness="1" bottom_delta="0" 
	     follows="left|top|right" font="SansSerif" handle_edit_keys_directly="true"
	     height="20" max_height="20" left_delta="110" max_length="40" mouse_opaque="true"
	     name="gridnick" select_all_on_focus_received="true" width="260" label="required" />
  <text bg_visible="false" border_drop_shadow_visible="false" border_visible="false"
       bottom_delta="-23" drop_shadow_visible="true" follows="left|top"
       font="SansSerif" h_pad="0" halign="left" height="16"
       left="220" mouse_opaque="true" name="gridname_text" v_pad="0" width="120">
    Grid name:
  </text>
  <line_editor bevel_style="in" border_style="line" border_thickness="1" bottom_delta="0"
	     follows="left|top|right" font="SansSerif" handle_edit_keys_directly="true"
	     height="20" max_height="20" left_delta="110" max_length="40" mouse_opaque="true"
	     name="gridname" select_all_on_focus_received="true" width="260" label="required" />

