<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="worldmap" title="世界地圖">
	<tab_container name="maptab">
		<panel label="物件" name="objects_mapview"/>
		<panel label="地形" name="terrain_mapview"/>
	</tab_container>
	<text name="you_label">
		您
	</text>
	<text name="home_label">
		家
	</text>
	<text name="auction_label">
		拍賣
	</text>
	<text name="land_for_sale_label">
		待售土地
	</text>
	<button label="回家" label_selected="回家" name="Go Home" tool_tip="瞬間移動到你的起始位置"/>
	<check_box label="居民" name="people_chk"/>
	<check_box label="信息港" name="infohub_chk"/>
	<check_box label="傳送站" name="telehubchk"/>
	<check_box label="待售土地" name="land_for_sale_chk"/>
	<text name="events_label">
		事件：
	</text>
	<check_box label="普遍級" name="event_chk"/>
	<check_box label="輔導級" name="event_mature_chk"/>
	<check_box label="成人" name="event_adult_chk"/>
	<combo_box label="線上好友" name="friend combo" tool_tip="要在地圖上顯示的好友">
		<combo_item name="none_selected">
			線上好友
		</combo_item>
	</combo_box>
	<combo_box label="我的地標" name="landmark combo" tool_tip="要在地圖上顯示的地標">
		<combo_item name="none_selected">
			我的地標
		</combo_item>
	</combo_box>
	<line_editor label="通過區域名稱查找" name="location" tool_tip="鍵入地區的名稱"/>
	<button label="搜索" label_selected="&gt;" name="DoSearch" tool_tip="尋找地區"/>
	<text name="search_label">
		查詢結果:
	</text>
	<scroll_list name="search_results">
		<column label="" name="icon"/>
		<column label="" name="sim_name"/>
	</scroll_list>
	<text name="location_label">
		位置:
	</text>
	<spinner name="spin x" tool_tip="地圖中顯示地點的X座標"/>
	<spinner name="spin y" tool_tip="地圖中顯示地點的Y座標"/>
	<spinner name="spin z" tool_tip="地圖中顯示地點的Z座標"/>
	<button label="瞬間移動" label_selected="瞬間移動" name="Teleport" tool_tip="瞬間移動到指定地點"/>
	<button label="顯示目的地" label_selected="顯示目的地" name="Show Destination" tool_tip="居中顯示指定地點"/>
	<button label="清除" label_selected="清除" name="Clear" tool_tip="停止追蹤/跟蹤"/>
	<button label="顯示我的位置" label_selected="顯示我的位置" name="Show My Location" tool_tip="居中顯示你的化身的位置"/>
	<button label="複製 SLURL 到剪貼板" name="copy_slurl" tool_tip="將當前位置複製為 SLURL 以供網上使用"/>
	<slider label="縮放" name="zoom slider"/>
</floater>
