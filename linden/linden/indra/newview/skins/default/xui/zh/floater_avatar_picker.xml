<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater min_height="340" min_width="200" name="avatarpicker" title="選擇居民">
	<tab_container name="ResidentChooserTabs">
		<panel label="搜索" name="SearchPanel">
			<text name="InstructSearchResidentName">
				輸入此居民的部分姓名
			</text>
			<button label="尋找" label_selected="尋找" name="Find"/>
		</panel>
		<panel label="通話卡" name="CallingCardsPanel">
			<text name="InstructSelectCallingCard">
				選擇一張通話卡：
			</text>
		</panel>
		<panel label="在我附近" name="NearMePanel">
			<text name="InstructSelectResident">
				選擇附近的居民：
			</text>
			<button label="刷新列表" label_selected="刷新列表" name="Refresh"/>
			<slider label="範圍" name="near_me_range"/>
			<text name="meters">
				米
			</text>
		</panel>
	</tab_container>
	<button label="選擇" label_selected="選擇" name="Select"/>
	<button label="取消" label_selected="取消" name="Cancel"/>
	<string name="not_found">
		沒有找到"[TEXT]"
	</string>
	<string name="no_one_near">
		附近沒有任何人
	</string>
	<string name="no_results">
		沒有結果
	</string>
	<string name="searching">
		搜索中...
	</string>
</floater>
